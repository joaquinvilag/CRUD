<%- include('partials/head') %>

<%- include('partials/header') %>
    <h1>Crear una PELI</h1>
    <p>Crea tu peli en el siguiente formulario</p>

    <form action="/peliculas/crear/" method="POST">
        <div>
            <label for="">Título</label>        
            <input type="text" name="titulo">
        </div>
        <div>
            <label for="">Puntuación</label>        
            <input type="text" name="rating">
        </div>
        <div>
            <label for="">Premios</label>        
            <input type="text" name="awards">
        </div>
        <div>
            <label for="">Fecha de estreno</label>        
            <input type="date" name="release_date">
        </div>
        <div>
            <label for="">Genero</label>        
            <select name="generos" >
                <% for (let i=0 ; i < generos.length ; i++) { %>
                    <option value="<%=generos[i].id%>">
                        <%= generos[i].name %>
                    </option>

                <% } %>


            </select>
        </div>
        <div>
            <label for="">Duración</label>        
            <input type="date" name="length">
        </div>
        <button type="submit">Crear</button>
        
    
    </form>

    

<%- include('partials/footer') %>
